<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainScreen.Orders.ProductDetailActivity"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#E7F6FF">
        <ImageView
            android:id="@+id/img_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_plant_test"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#F5F7F8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="NiTOX 30EC"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />
                            <TextView
                                android:id="@+id/price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="150.000 VNĐ"
                                android:textSize="18sp"
                                android:textColor="#2285E0"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elevation="15dp">
                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnSignUp"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:text="Mua ngay"
                                    android:textColor="@color/white"
                                    android:background="@drawable/border_card"
                                    android:backgroundTint="#E04422"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/reduced"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:text="-"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:background="@drawable/border_card"
                            android:backgroundTint="#F3F3F3"/>
                        <TextView
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="10dp"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/increase"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:text="+"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:background="@drawable/border_card"
                            android:backgroundTint="#F3F3F3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="|"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:layout_marginHorizontal="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Số lượng khuyên dùng: 2"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginHorizontal="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thành phần"
                                android:fontFamily="@font/lato_bold"
                                android:textSize="16sp"
                                android:textColor="@color/cs_dark"/>
                            <View
                                android:layout_width="32dp"
                                android:layout_height="1dp"
                                android:background="@color/cs_dark"
                                android:layout_marginBottom="12dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/cs_gray"
                                android:id="@+id/ingredient"
                                android:text="Hiện tại chưa có triệu chứng cho bệnh này."
                                android:textSize="14sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Công dụng"
                                android:fontFamily="@font/lato_bold"
                                android:textSize="16sp"
                                android:textColor="@color/cs_dark" />

                            <View
                                android:layout_width="32dp"
                                android:layout_height="1dp"
                                android:background="@color/cs_dark"
                                android:layout_marginBottom="12dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/cs_gray"
                                android:id="@+id/effect"
                                android:text="Hiện tại chưa có nguyên nhân cho bệnh này."/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hướng dẫn sử dụng"
                                android:fontFamily="@font/lato_bold"
                                android:textSize="16sp"
                                android:textColor="@color/cs_dark"/>

                            <View
                                android:layout_width="32dp"
                                android:layout_height="1dp"
                                android:background="@color/cs_dark"
                                android:layout_marginBottom="12dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/cs_gray"
                                android:id="@+id/userManual"
                                android:text="Hiện tại chưa có giải pháp cho bệnh này."/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lưu ý"
                                android:fontFamily="@font/lato_bold"
                                android:textSize="16sp"
                                android:textColor="@color/cs_dark"/>

                            <View
                                android:layout_width="32dp"
                                android:layout_height="1dp"
                                android:background="@color/cs_dark"
                                android:layout_marginBottom="12dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/cs_gray"
                                android:id="@+id/note"
                                android:text="Hiện tại chưa có giải pháp cho bệnh này."/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/rltBack"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:background="@drawable/circle"
        android:backgroundTint="#50000000">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/white"/>
    </RelativeLayout>

</RelativeLayout>