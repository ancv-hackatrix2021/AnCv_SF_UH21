<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:clipToPadding="false">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:elevation="15dp"
       android:background="@drawable/shadow_linearlayout">
       <RelativeLayout
           android:id="@+id/itemLocation"
           android:padding="10dp"
           android:background="@drawable/effec_click"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:maxWidth="180dp"
               android:id="@+id/txtNameLocation"
               android:layout_centerVertical="true"
               android:layout_alignParentLeft="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Hòa Nhơn"
               android:textSize="16sp"
               android:textColor="@color/color_text"/>
           <ImageView
               android:layout_centerVertical="true"
               android:layout_toLeftOf="@+id/txtLat_Long"
               android:layout_width="20dp"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_baseline_location_on_24"/>
           <TextView
               android:layout_centerVertical="true"
               android:maxWidth="160dp"
               android:id="@+id/txtLat_Long"
               android:layout_alignParentRight="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="16.210, 108.123"
               android:textSize="14sp"
               android:textColor="@color/color_text"/>
       </RelativeLayout>
   </RelativeLayout>
</LinearLayout>