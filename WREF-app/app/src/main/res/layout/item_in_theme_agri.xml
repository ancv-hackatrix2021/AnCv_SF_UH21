<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:id="@+id/lnlItemAgri"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_gravity="center"
            android:padding="10dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_gravity="center"
                android:id="@+id/imgAgri"
                android:scaleType="centerCrop"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:riv_corner_radius_bottom_right="5dp"
                app:riv_corner_radius_top_right="5dp"
                app:riv_corner_radius_top_left="5dp"
                app:riv_corner_radius_bottom_left="5dp"
                android:src="@drawable/ic_search" />

            <TextView
                android:layout_toRightOf="@+id/imgAgri"
                android:layout_marginLeft="10dp"
                android:id="@+id/txtTitleAgri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="75dp"
                android:text="Tra cá»©u"
                android:textColor="@color/color_text"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/txtDesPlant"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/imgAgri"
                android:layout_below="@+id/txtTitleAgri"
                android:ellipsize="end"
                android:maxLines="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@+id/imgAgri"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/time"
                android:textSize="14sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>