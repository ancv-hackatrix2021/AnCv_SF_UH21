<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
      integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body class="p-3">
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
      <div id="liveToast" class="toast fade hide" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
          <i class="fas fa-robot"></i>
          <strong class="me-auto" style="margin-left: 10px;">Huấn luyện</strong>
          <!-- <small>11 mins ago</small> -->
          <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close" id="close-toast"></button>
        </div>
        <div class="toast-body">
          <span>Đang huấn luyện</span>
          <div class="spinner-border text-success float-end" role="status" style="width: 20px; height: 20px;">
            <span class="visually-hidden">Loading...</span>
          </div>
        </div>
      </div>
    </div>
    <!--  -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <form method="POST" action="/nlp">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">New message</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
              <div class="mb-3">
                <label for="recipient-name" class="col-form-label">Ý định:</label>
                <input type="text" name="intent" class="form-control" id="intent" />
              </div>
              <div class="mb-3" >
                <label for="message-text"style="cursor: pointer;" class="col-form-label slide">Câu mẫu: <i class="fas fa-angle-down" style="margin-left: 20px;"></i></label>
                <div id="input-sample" style="display: none;">
                  <div style="position: relative;">
                    <input type="text" name="sample" class="form-control" id="message-text" style="margin: 2px 0;"></input>
                    <i class="fas fa-minus-circle" onclick="removeInput(this)" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); color: red; cursor: pointer;"></i>
                  </div>
                </div>
              </div>
              <button type="button" class="btn btn-success" id="new-sample">Thêm câu mẫu</button>
              <div class="mb-3">
                <label for="reply-intent" style="cursor: pointer;"class="col-form-label slide">Phản hồi: <i class="fas fa-angle-down" style="margin-left: 20px;"></i></label>
                <div  style="display: none;">
                  <div style="display: flex;">
                    <input type="text" name="feedback" class="form-control" id="reply-intent" style="margin: 2px 0; width: 100%;"></input>
                    <select class="form-select" aria-label="Default select example" name="type" style="margin-left: 20px; width: 150px;">
                      <option selected value="">Chọn kiểu phản hồi </option>
                      <option value="text">text</option>
                      <option value="data">data</option>
                      <option value="product">product</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="mb-3">
                <label for="reply-intent" style="cursor: pointer;"class="col-form-label slide">Tham số <i class="fas fa-angle-down" style="margin-left: 20px;"></i></label>
                <div style="display: none;" id="input-params">
                  <select class="form-select" aria-label="Default select example" name="script_intent" style="margin-top: 10px;">
                    <option selected value="">Chọn ý định </option>
                    <% data.forEach((d, index) => { %>
                    <option value="<%= d._id %>"><%= d.intent %></option>
                    <% }) %>
                  </select>
                  <input type="number" name="script_repeat" class="form-control" style="margin: 2px 0;" placeholder="Nhập số lần nhắc"></input>
                  <input type="text" name="script_feedback" class="form-control"  style="margin: 2px 0;" placeholder="Lời nhắc"></input>
                </div>
              </div>
              <button type="button" class="btn btn-success" id="new-params">Thêm tham số</button>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Send message</button>
          </div>
          </form>
        </div>
      </div>
    </div>
    <!--  -->
    <%- include('./header.ejs') %>
    <h2 class="text-center">Dữ liệu câu mẫu</h2>
    <div style="padding: 30px 100px">
      <div class="float-end">
        <button
          type="button"
          class="btn btn-success"
          id="train"
        >
          Huấn luyện bot
        </button>
        <button
          type="button"
          class="btn btn-primary"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"
          data-bs-whatever="@mdo"
        >
          Thêm ý định
        </button>
      </div>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col" width="5%">#</th>
            <th scope="col" width="20%">Ý định</th>
            <th scope="col" width="25%">Câu mẫu</th>
            <th scope="col" width="40%">Phản hồi</th>
            <th scope="col" width="10%">Hành động</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach((d, index) => { %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= d.intent %></td>
              <td>""</td>
              <td><%= d.feedback %></td>
              <td>
                <div class="d-flex">
                  <div class="px-2">
                    <button type="button" class="btn btn-warning"><i class="fas fa-edit"></i></button>
                  </div>
                  <div class="px-2">
                    <a href="/nlp/delete/<%= d._id %>">
                      <button type="button" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                    </a>
                  </div>
                </div>
              </td>
            </tr>
          <% }) %>
          
        </tbody>
      </table>
    </div>
    <script
      src="https://code.jquery.com/jquery-3.6.0.js"
      integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      $('#exampleModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget); // Button that triggered the modal
        var recipient = button.data('whatever'); // Extract info from data-* attributes
        // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
        // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
        var modal = $(this);
        modal.find('.modal-title').text('New message to ' + recipient);
        modal.find('.modal-body input').val(recipient);
      });

      $('#new-sample').on('click', () => {
        const html = '<div style="position: relative;">'
                  +'<input type="text" name="sample" class="form-control" id="message-text" style="margin: 2px 0;"></input>'
                  +'<i class="fas fa-minus-circle" onclick="removeInput(this)" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); color: red; cursor: pointer;"></i>'
                +'</div>';
        $('#input-sample').append(html);
      });

      function removeInput(e){
        $(e).parent().remove();
      }
      function removeInputReply() {
        $(e).parent().remove();
      }

      $('.slide').on('click', function () {
        $(this).next().slideToggle();
      })

      $('#new-params').on('click', () => {
        const html = '<select class="form-select" aria-label="Default select example" name="script_intent" style="margin-top: 10px;">'+
                   '<option selected>Chọn ý định </option>'+
                   '<% data.forEach((d, index) => { %>'+
                    '<option value="<%= d._id %>"><%= d.intent %></option>'+
                    '<% }) %>'+
                  '</select>'+
                  '<input type="number" name="script_repeat" class="form-control" style="margin: 2px 0;" placeholder="Nhập số lần nhắc"></input>'+
                  '<input type="text" name="script_feedback" class="form-control"  style="margin: 2px 0;" placeholder="Lời nhắc"></input>';
        $('#input-params').append(html);      
      })


      $('#train').on('click', () => {
        $('#liveToast').removeClass('hide');
        $('#liveToast').addClass('show');
        $.ajax({
          method: "GET",
          url: "/api/bot/train",
        })
          .done(function( msg ) {
            setTimeout(()=>{
              console.log(msg);
              $('.toast-body > span').text(msg.message);
              $('.toast-body > span').css('color', 'white');
              $('.toast-body').css('background', 'green');
              $('.toast-body > .spinner-border').css('display', 'none')
            }, 2000)
          });
        });
        $('#close-toast').on('click', () => {
          setTimeout(()=>{
            $('.toast-body > span').text("Đang huấn luyện");
            $('.toast-body > span').css('color', 'black');
            $('.toast-body').css('background', 'white');
            $('.toast-body > .spinner-border').css('display', 'block');
          }, 1000)
        });
    </script>
  </body>
</html>
