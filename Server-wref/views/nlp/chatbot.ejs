<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../../css/chatbot.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
      integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body class="p-3">
    <%- include('./header.ejs') %>
    <h2 class="text-center">Dữ liệu câu mẫu</h2>
    <div style="padding: 30px 100px" class="d-flex justify-content-center">
      <div class="rounded border border-primary position-relative" style="width: 400px; height: 600px">
        <div id="content" class="d-flex flex-column p-2" style="height: 540px; width: 100%">
          <!-- content -->
        </div>
        <div class="position-absolute border-top p-2 d-flex justify-content-between" style="bottom: 0; width: 100%">
          <input id="mess" type="text" placeholder="Nhập tin nhắn ..." style="width: 100%; margin-right: 10px" />
          <button id="send-message"><i class="fas fa-paper-plane"></i></button>
        </div>
      </div>
    </div>
    <script
      src="https://code.jquery.com/jquery-3.6.0.js"
      integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      const socket = io();
      $(document).ready(function () {
        const html =
          '<div class="chat-bubble" id="typing">' +
          '<div class="typing">' +
          '<div class="dot"></div>' +
          '<div class="dot"></div>' +
          '<div class="dot"></div>' +
          '</div>' +
          '</div>';
        const btnSendMess = $('#send-message');
        const divDontent = $('#content');
        const mess = $('#mess');
        divDontent.append('<div class="mess-bot"><div><span>Xin chào bạn</span></div></div>');
        btnSendMess.on('click', () => {
          hanldeMessage();
        });
        mess.keypress(function (e) {
          const key = e.which;
          if (key == 13) {
            hanldeMessage();
          }
        });
        function hanldeMessage() {
          socket.emit('client-send', mess.val());
          divDontent.append('<div class="mess-client"><div><span>' + mess.val() + '</span></div></div>');
          mess.val('');
          divDontent.append(html);
        }

        socket.on('bot-send', (reply) => {
          setTimeout(() => {
            $('#typing').remove();
            switch (reply.type) {
              case 'text':
                divDontent.append('<div class="mess-bot"><div><span>' + reply.data + '</span></div></div>');
                break;
              case 'weather':
                divDontent.append(
                  '<div class="mess-bot"><div><code>' + JSON.stringify(reply.data) + '</code></div></div>'
                );
                break;

              default:
                break;
            }
          }, 2000);
        });
      });
    </script>
  </body>
</html>
