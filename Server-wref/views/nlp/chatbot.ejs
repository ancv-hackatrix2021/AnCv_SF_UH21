<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
      integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm"
      crossorigin="anonymous"
    />
    <title>Document</title>
    <style>
      button,
      input {
        border: none;
        outline: none;
      }
      button {
        background-color: transparent;
        padding: 5px 10px;
      }
      button:hover {
        background-color: #dbdbdb;
      }
      button > i {
        color: #0d6efd;
        font-size: 20px;
      }
      .mess-bot {
        width: 100%;
        text-align: left;
        margin: 5px 0;
      }
      .mess-client {
        width: 100%;
        text-align: right;
        margin: 5px 0;
      }
      .mess-bot > div,
      .mess-client > div {
        max-width: 260px;
        display: inline-block;
        padding: 5px 15px;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
      }
      .mess-bot > div {
        background-color: #e4e6eb;
        border-bottom-right-radius: 20px;
        color: black;
      }
      .mess-client > div {
        background-color: rgb(0, 132, 255);
        border-bottom-left-radius: 20px;
        color: white;
      }
      .mess-bot > div > span,
      .mess-client > div > span {
        white-space: pre-line;
      }
    </style>
  </head>
  <body class="p-3">
    <h1 class="text-center">ChatBot NLP</h1>
    <div class="d-flex justify-content-center">
      <div class="p-2">
        <a href="/nlp">
          <button type="button" class="btn btn-outline-primary">Ý định</button>
        </a>
      </div>
      <div class="p-2">
        <a href="">
          <button type="button" class="btn btn-outline-primary">Câu mẫu</button>
        </a>
      </div>
      <div class="p-2">
        <a href="">
          <button type="button" class="btn btn-outline-primary">StopWord</button>
        </a>
      </div>
      <div class="p-2">
        <a href="">
          <button type="button" class="btn btn-primary">Chat bot</button>
        </a>
      </div>
    </div>
    <h2 class="text-center">Dữ liệu câu mẫu</h2>
    <div style="padding: 30px 100px" class="d-flex justify-content-center">
      <div class="rounded border border-primary position-relative" style="width: 400px; height: 600px">
        <div id="content" class="d-flex flex-column p-2" style="height: 540px; width: 100%">
          <!-- content -->
        </div>
        <div class="position-absolute border-top p-2 d-flex justify-content-between" style="bottom: 0; width: 100%">
          <input id="mess" type="text" placeholder="Nhập tin nhắn ..." style="width: 100%; margin-right: 10px" />
          <button id="send-message"><i class="fas fa-paper-plane"></i></button>
        </div>
      </div>
    </div>
    <script
      src="https://code.jquery.com/jquery-3.6.0.js"
      integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      const socket = io();
      $(document).ready(function () {
        const btnSendMess = $('#send-message');
        const divDontent = $('#content');
        const mess = $('#mess');
        divDontent.append('<div class="mess-bot"><div><span>Xin chào bạn</span></div></div>');
        btnSendMess.on('click', () => {
          hanldeMessage();
        });
        mess.keypress(function (e) {
          const key = e.which;
          if (key == 13) {
            hanldeMessage();
          }
        });
        function hanldeMessage() {
          socket.emit('client-send', mess.val());
          divDontent.append('<div class="mess-client"><div><span>' + mess.val() + '</span></div></div>');
          mess.val('');
        }

        socket.on('bot-send', (reply) => {
          divDontent.append('<div class="mess-bot"><div><span>' + reply + '</span></div></div>');
        });
      });
    </script>
  </body>
</html>
