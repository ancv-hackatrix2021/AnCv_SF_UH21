<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../../css/chatbot.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
      integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body class="p-3">
    <%- include('./header.ejs') %>
    <h2 class="text-center">Dữ liệu câu mẫu</h2>
    <div style="padding: 30px 100px" class="d-flex justify-content-center">
      <div class="rounded border border-primary position-relative" style="width: 400px; height: 600px">
        <div id="content" class="d-flex flex-column-reverse p-2" style="height: 540px; width: 100%; overflow-y: auto">
          <!-- content -->
        </div>
        <div class="position-absolute border-top p-2 d-flex justify-content-between" style="bottom: 0; width: 100%">
          <input id="mess" type="text" placeholder="Nhập tin nhắn ..." style="width: 100%; margin-right: 10px" />
          <button id="send-message"><i class="fas fa-paper-plane"></i></button>
        </div>
      </div>
    </div>
    <script
      src="https://code.jquery.com/jquery-3.6.0.js"
      integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      let scriptIntent;
      let oldIntent;
      let repeat;
      $(document).ready(function () {
        const html =
          '<div class="chat-bubble" id="typing">' +
          '<div class="typing">' +
          '<div class="dot"></div>' +
          '<div class="dot"></div>' +
          '<div class="dot"></div>' +
          '</div>' +
          '</div>';
        const btnSendMess = $('#send-message');
        const divDontent = $('#content');
        const mess = $('#mess');
        divDontent.prepend('<div class="mess-bot"><div><span>Xin chào bạn</span></div></div>');
        btnSendMess.on('click', () => {
          hanldeMessage();
        });
        mess.keypress(function (e) {
          const key = e.which;
          if (key == 13) {
            hanldeMessage();
          }
        });
        function hanldeMessage() {
          // socket.emit('client-send', mess.val());
          $.ajax({
            method: 'POST',
            url: '/api/bot/message',
            data: {
              message: mess.val(),
              scriptIntent,
              oldIntent,
              repeat: repeat,
            },
          }).done(function (res) {
            const data = res.data;
            console.log(data);
            console.log(data.repeat);
            scriptIntent = data.scriptIntent ? data.scriptIntent : null;
            oldIntent = data.oldIntent ? data.oldIntent : null;
            repeat = Number.isInteger(data.repeat) ? data.repeat : null;
            console.log(repeat);
            setTimeout(() => {
              $('#typing').remove();
              switch (data.type) {
                case 'text':
                  divDontent.prepend('<div class="mess-bot"><div><span>' + data.message + '</span></div></div>');
                  break;
                case 'data':
                  divDontent.prepend(
                    `<div class="mess-bot"><div><b>${data.message}</b><br>${dataToMess(data.data)}</div></div>`
                  );
                  break;

                default:
                  break;
              }
            }, 2000);
          });
          divDontent.prepend('<div class="mess-client"><div><span>' + mess.val() + '</span></div></div>');
          mess.val('');
          divDontent.prepend(html);
        }
      });

      function dataToMess(data) {
        let html = '';
        for (var property in data) {
          name = property;
          value = data[property];
          html = html + `<div>${name}: ${value}</div>`;
        }
        return html;
      }
    </script>
  </body>
</html>
